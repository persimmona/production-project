{
  "compilerOptions": {
		"baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
  },
  //It JIT transforms TypeScript into JavaScript, enabling you to directly execute TypeScript on Node.js without precompiling. 
  // to write configuration in Typescript
	"ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // "include": ["./config/jest/setupTests.ts"]
}